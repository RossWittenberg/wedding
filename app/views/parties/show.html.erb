<p id="notice"><%= notice %></p>

<h3>
  	Party name:
</h3>
<p>
	<%= @party.party_name %>
</p>
<h3>
  Guests in the party:
</h3>
<% @party.guests.each do |guest| %>
  <p>
    <%= guest.first_name %> <%= guest.last_name %>
  </p>
<% end %>
<h3>
	Party Notes:
</h3>
<p>
	<%= @party.notes %>
</p>

<%= link_to 'Edit', edit_party_path(@party) %> |
<%= link_to 'Back', parties_path %> |
<%= link_to 'Remove', @party, method: :delete, data: { confirm: 'Are you sure?' } %>

