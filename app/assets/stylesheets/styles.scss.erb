@import 'colors';
@import 'fonts';
@import url('https://fonts.googleapis.com/css?family=Lato:100,300,400,700,900');

.relative {
	position: relative;
}

.z-one {
	z-index: 1;
}
.upcase {
	text-transform: uppercase;
}

.width-100 {
	width: 100%;
} 

.green__text td {
	border: solid 1px black;
	background-color: green;
}

.yellow__text td{
	border: solid 1px black;
	background-color: papayawhip;
}

.red__text td {
	border: solid 1px black;
	background-color: red;
}

.names__header {
	color: $navy;
	font-family: "BrandonMed";
	text-align: center;
	font-weight: 200;
	font-size: 42px;
	letter-spacing: 3px;
	&.plus {
		font-size: 30px;
	}
	&.right {
		margin-left: 2px;
	}
}

.body__text {
	color: $navy;
	font-family: "BrandonMed";
	text-align: center;
	font-weight: 600;
	font-size: 18px;
	letter-spacing: 3px;
	line-height: 1.5;
	&.bigger {
		font-size: 32px;
		letter-spacing: 10px;
	}
	&.smaller {
		font-size: 14px;
	}
}

.white__text {
	color: $white;
}

.navy__text {
	color: $navy;
}

.light-blue__text {
	color: $light-blue;
}

.text__align--center {
	text-align: center;
}

.text__align--left {
	text-align: left;
}

.kid td {
	color: deepskyblue;
}

.rsvp__header {
	height: calc(100vh - 200px);
	background: url(' <%= asset_path("medium-square-tile.jpg") %> ') repeat;
}

.section__two {
	height: 200px;
	max-width: 900px;
	padding: 0 30px;
}

.section__three {
	height: 430px;
}

.left__block {
	width: 60%;
	height: 100%;
	position: relative;
	display: inline-block;
}

.color__block {
	height: 100%;
	width: 100%;
	position: relative;
	&.navy__background {
		background-color: $navy;
	}	
}


.header__name--wrapper {
	margin: 0 auto;
	height: 200px;
	width: 300px;
	background-color: $white;
}

.white__border {
	position: relative;
	&:before {
	  display: block;
	  content: '';
	  position: absolute;
	  top: 16px;
	  right: 16px;
	  bottom: 16px;
	  left: 16px;
	  border: 1px solid $navy;
	}
}

.invitee__names--header,
.color__block--header,
.rsvp__form--header {
	color: $navy;
	font-family: "BigCaslon";
	font-weight: 200;
	font-size: 38px;
	letter-spacing: 10px;
	width: 100%;
	&.color__block--header {
		color: $white;
		font-weight: 100;
	}
}

.pressura--reg {
	font-family: "PressureReg";
	font-size: 18px;
	&.wide {
		letter-spacing: 8px;
	}
	&.date__header {
		margin-bottom: -30px;
	}
	&.pousada {
		width: 300px;
		margin: 20px auto;
		line-height: 1.7;
	}
	&.smaller {
		font-size: 14px;
	}
}

// .scallop__header {
