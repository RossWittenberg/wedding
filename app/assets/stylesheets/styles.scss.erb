// }

.table__wrapper {
	display: table;
	width: 100%;
	height: 100%;
}

.table__inner {
	display: table-cell;
	height: 100%;
	vertical-align: middle;
}

.rsvp__radio--cirle__label {
	@extend .body__text;
}

.rsvp__radio--cirle {
	height: 16px;
	width: 17px;
	border: 1px solid $navy;
	border-radius: 50px;
	display: inline-block;
	margin-right: 12px;
	margin-top: 2px;
	&.selected {
		&:after {
		content: "";
	    height: 14px;
	    width: 15px;
	    display: block;
	    background-color: $navy;
	    border-radius: 50px;
	    border: 2px $white solid;
		}
	}
}

.date__container {
    width: 140px;
    margin: 0 auto;
}

.skinny {
    position: relative;
    display: inline-block;
    width: 10px;
}

.fat {
    position: relative;
    display: inline-block;
    width: 110px;
    text-align: center;
    font-family: "BigCaslon";
    font-size: 90px;
    top: -8px;
}

.portugal__text--wrapper {
	padding-top: 30px;
}

img.portugal__outline {
	position: absolute;
    width: 180px;
    left: calc(50% - 90px);
    z-index: 0;
    top: 27px;
}

.margin__top--20 {
	margin-top: 20px;
}

.margin__top--40 {
	margin-top: 40px;
}

.margin__top--60 {
	margin-top: 60px;
}

.margin__top--80 {
	margin-bottom: 80px;
}

.margin__top--100 {
	margin-bottom: 100px;
}

.margin__bottom--0 {
	margin-bottom: 0px;
}

.margin__bottom--20 {
	margin-bottom: 20px;
}

.margin__bottom--40 {
	margin-bottom: 40px;
}

.margin__bottom--60 {
	margin-bottom: 60px;
}

.margin__bottom--80 {
	margin-bottom: 80px;
}

.padding__left--20 {
	padding-left: 20px;
}

.rsvp__table {
	width: 100%;
}

.rsvp__status--update__message--wrapper {
	width: 25%;
}

.border__right--navy {
	border-right: 1px solid $light-blue;
}

.rsvp__row {
	border-bottom: 1px solid $light-blue;
}

.row__80 {
	height: 80px;
}

.row__60 {
	height: 60px;
	p {
		margin-bottom: 12px;
		margin-top: 40px;
	}
}

.right__block {
	width: 40%;
	height: 100%;
	background-color: $light-blue;
	float: right;
	display: inline-block;
}

input[type=text],
input[type=email],
input[type=email],
input[type=tel],
textarea.form-control,
select.form-control {
	height: 40px;
	border-radius: 0;
	border: none;
	border-bottom: 1px solid $light-blue;
    font-size: 16px;
    font-family: "BrandonMed";
    color: $light-blue;
	&::-webkit-input-placeholder { 
	  color: $light-blue;
	}
	&::-moz-placeholder { 
	  color: $light-blue;
	}
	&:-ms-input-placeholder { 
	  color: $light-blue;
	}
	&:-moz-placeholder {
	  color: $light-blue;
	}
	&:focus {
		border-bottom: 1px solid $light-blue-solid;
    	color: $light-blue-solid;
    		&::-webkit-input-placeholder { 
			  color: $light-blue-solid;
			}
			&::-moz-placeholder { 
			  color: $light-blue-solid;
			}
			&:-ms-input-placeholder { 
			  color: $light-blue-solid;
			}
			&:-moz-placeholder {
			  color: $light-blue-solid;
			}
	}
}

select.form-control {
	-webkit-appearance: none;
}

button.submit__button {
	border-radius: 0;
	border: none;
	width: 225px;
	height: 50px;
	color:	$white;
	background-color: $navy;
	margin: 80px auto;
	display: block;
	font-family: "BrandonMed";
	text-align: center;
	font-weight: 400;
	font-size: 16px;
	letter-spacing: 3px;
	line-height: 1.5;
	cursor: pointer;
	transition: all .3s ease-in-out;
	&:hover,
	&:focus {
		background-color: lighten( $navy, 10%);
	}
}

.section__four--header__wrapper {
	width: calc(100% - 100px);
	height: calc(100% - 100px);
	display: block;
	background-color: $white;
	margin: auto;
}

p.section__four--header-text {
	font-family: "BrandonMed";
	text-align: center;
	font-weight: 600;
	font-size: 20px;
	letter-spacing: 3px;
	line-height: 1.5;
}

p.section__four--content {
	font-family: "MilleDisLig";
	font-size: 18px;
	line-height: 1.5;
	position: relative;
    z-index: 1;
    a {
    	color: $light-blue;
    	transition: all .3s ease-in-out;
    	&:hover,
    	&:focus {
	    	background-color: transparent;
	    	color: $bright-blue;
	    	text-decoration: none;
    	}
    }	
}

.section__four--inner-wrapper {
	max-width: calc(100% - 200px);
	display: block;
	margin: 0 auto;
}

.r-and-w {
	background: url(' <%= asset_path("r-w.png") %> ') no-repeat;
	height: 144px;
	z-index: 1;
	margin: 0 auto;
	background-position: 50%;
	transform: scale(.9);
}

.section__four {
	margin: 60px 0;
	height: calc(100vh - 200px);
	background: url(' <%= asset_path("medium-square-tile2.png") %> ') repeat;
}

.textarea {
	height: 100px !important;
}

a.hover__ligthen {
	cursor: pointer;
	text-align: center;
	display: block;
	text-decoration: none;
	transition: all .3s ease-in-out;
	&:hover,
	&:focus,
	&:visited {
		color: lighten($bright-blue, .7);
		text-decoration: none;
		background-color: transparent;
	}
}