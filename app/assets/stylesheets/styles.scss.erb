form {
	position: relative;
	z-index: 2;
}

input[type=text],
input[type=email],
input[type=email],
input[type=tel],
textarea.form-control,
select.form-control {
	height: 40px;
	border-radius: 0;
	border: none;
	border-bottom: 1px solid $light-blue;
    font-size: 16px;
    font-family: "BrandonMed";
    color: $light-blue;
	&::-webkit-input-placeholder { 
	  color: $light-blue;
	}
	&::-moz-placeholder { 
	  color: $light-blue;
	}
	&:-ms-input-placeholder { 
	  color: $light-blue;
	}
	&:-moz-placeholder {
	  color: $light-blue;
	}
	&:focus {
		border-bottom: 1px solid $light-blue-solid;
    	color: $light-blue-solid;
    		&::-webkit-input-placeholder { 
			  color: $light-blue-solid;
			}
			&::-moz-placeholder { 
			  color: $light-blue-solid;
			}
			&:-ms-input-placeholder { 
			  color: $light-blue-solid;
			}
			&:-moz-placeholder {
			  color: $light-blue-solid;
			}
	}
}

select.form-control {
	-webkit-appearance: none;
}

button.submit__button,
input.submit__button,
a.button {
	border-radius: 0;
	border: none;
	width: 225px;
	height: 50px;
	color:	$white;
	background-color: $navy;
	margin: 80px auto;
	display: block;
	font-family: "BrandonMed";
	text-align: center;
	font-weight: 400;
	font-size: 16px;
	letter-spacing: 3px;
	line-height: 1.5;
	cursor: pointer;
	transition: all .3s ease-in-out;
	&:hover,
	&:focus {
		background-color: lighten( $navy, 10%);
	}
	&.home-rsvp {
		margin: 40px auto 0;
	}
	.centered {
		display: block;
		margin: 0 auto;
	}
	&.inverse {
		background-color: $white;
		color: $navy;
		&:hover,
		&:focus {
			background-color: lighten( $navy, 50%);
		}
	}
}

.section__four--header__wrapper {
	width: calc(100% - 100px);
