}

.kid td {
	color: $light-blue-medium;
}

.rsvp__header {
	height: 100vh;
	background: url(' <%= asset_path("medium-square-tile.jpg") %> ') repeat;
	background-position: 50%;
	&.splash {
		height: calc(100vh - 175px);
	}
}

.section__two {
