// 	background: url('/assets/azulego-scallop-double.png') repeat;
// }

.table__wrapper {
	display: table;
	width: 100%;
	height: 100%;
}

.table__inner {
	display: table-cell;
	height: 100%;
	vertical-align: middle;
}

.rsvp__radio--cirle {
	height: 16px;
	width: 16px;
	border: 1px solid $navy;
	border-radius: 50px;
	display: inline-block;
	margin-right: 12px;
	margin-top: 2px;
	&.selected {
		&:after {
		content: "";
	    height: 14px;
	    width: 14px;
	    display: block;
	    background-color: $navy;
	    border-radius: 50px;
	    border: 2px $white solid;
		}
	}
}

.date__container {
    width: 140px;
    margin: 0 auto;
}

.skinny {
    position: relative;
    display: inline-block;
    width: 10px;
}

.fat {
    position: relative;
    display: inline-block;
    width: 110px;
    text-align: center;
    font-family: "BigCaslon";
    font-size: 90px;
    top: -8px;
}

.portugal__text--wrapper {
	padding-top: 30px;
}

img.portugal__outline {
	position: absolute;
    width: 70px;
    left: calc(50% - 35px);
    z-index: 0;
    top: 55px;
}