@import 'colors';
@import 'fonts';
@import url('https://fonts.googleapis.com/css?family=Lato:100,300,400,700,900');

.relative {
	position: relative;
}

.z-one {
	z-index: 1;
}
.upcase {
	text-transform: uppercase;
}

.width-100 {
	width: 100%;
} 

.navy__text {
	color: $navy;
}

